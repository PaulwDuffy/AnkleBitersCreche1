@page
@model AnkleBitersCreche.Pages.Students.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Student Details</h2>
<br />
<form method="post">
    <div class=" border  backgroundWhite">
        <input type="hidden" asp-for="Student.Id" />
        <input type="hidden" asp-for="Student.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Student.PPS" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.PPS" class="form-control" />
            </div>
            <span asp-validation-for="Student.PPS" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Student.FirstName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Student.LastName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Student.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Student.DOB" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.DOB" class="form-control" />
            </div>
            <span asp-validation-for="Student.DOB" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Student.Gender" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.Gender" class="form-control" />
            </div>
            <span asp-validation-for="Student.Gender" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Update" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Student.UserId" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
