@page
@model AnkleBitersCreche1.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Register New Student</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <input hidden asp-for="Student.UserId" /> <!--needed to determine which user to add the student to-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.PPS"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.PPS" class="form-control">
            </div>
            <span asp-validation-for="Student.PPS" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.FirstName" class="form-control">
            </div>
            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.LastName" class="form-control">
            </div>
            <span asp-validation-for="Student.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.DOB"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.DOB" class="form-control">
            </div>
            <span asp-validation-for="Student.DOB" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.Gender"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.Gender" class="form-control">
            </div>
            <span asp-validation-for="Student.Gender" class="text-danger"></span>
        </div>


        <div class="for-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>

</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


