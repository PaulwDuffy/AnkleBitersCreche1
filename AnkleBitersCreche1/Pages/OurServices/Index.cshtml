@page
@model AnkleBitersCreche1.Pages.OurServices.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Our Services</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.OurService.Count == 0)
        {
            <p>No Service Type Exists, Please Create A New One.</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondry">
                    <th>
                        @Html.DisplayNameFor(m => m.OurService[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.OurService[0].Price)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model.OurService)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                &nbsp;&nbsp;
                                <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

